{
  "name": "miniblox-game-client",
  "version": "1.0.0",
  "description": "Miniblox Game Client",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "build:installer": "electron-builder --win nsis"
  },
  "build": {
    "appId": "io.miniblox.client",
    "productName": "MinibloxClient",
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false,
      "publisherName": "Miniblox Game",
      "legalTrademarks": "Miniblox",
      "artifactName": "MinibloxClient.exe"
    },
    "fileAssociations": [],
    "protocols": []
  },
  "keywords": ["miniblox", "game"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
